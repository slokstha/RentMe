<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/transport_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jeep On rent . Saman Sarna parema, hamilai contact garnu hola "
                android:textStyle="bold"
                android:lineSpacingExtra="3dp"
                android:padding="6dp"
                android:textSize="15dp" />
            <ImageView
                android:id="@+id/v_btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_delete_forever_black_24dp"/>
            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transport_details"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner Name: Anita Shrestha"
                    android:padding="6dp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: 3000"
                    android:padding="6dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Contact: 9810296512" />
            <TextView
                android:id="@+id/service_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/phone"
                android:layout_alignParentBottom="true"
                android:padding="6dp"
                android:layout_centerHorizontal="true"
                android:text="Service Area: Kathmandu" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_call_vehicle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f1f1f1"
                android:text="Call to book"
                android:layout_below="@+id/layout1"
                android:layout_margin="5dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>