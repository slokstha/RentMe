<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/add_v_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add a new vehicle information"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/v_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_v_tv"
            android:hint="Title"

            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/v_title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_title_tv"
            android:layout_marginHorizontal="5dp"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/v_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_title_et"
            android:hint="Price"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/v_price_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_price_tv"
            android:layout_marginHorizontal="5dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/v_owner_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_price_et"
            android:hint="Owner/Driver Name"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/v_owner_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_owner_tv"
            android:layout_marginHorizontal="5dp"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/v_contact_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_owner_et"
            android:hint="Contact"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/v_contact_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_contact_tv"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/v_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_contact_et"
            android:hint="Service Location"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/v_location_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_location_tv"
            android:layout_marginRight="5dp"
            android:spinnerMode="dropdown" />
        <Button
            android:id="@+id/v_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_location_et"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorAccent"
            android:text="Post" />

    </RelativeLayout>
</ScrollView>