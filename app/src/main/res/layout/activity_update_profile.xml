<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_margin="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/updt_prfl_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/person"
        android:layout_gravity="center"
        android:layout_margin="30dp"/>

    <TextView
        android:id="@+id/updt_text_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Profile Photo"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Name"/>

    <EditText
        android:id="@+id/updt_et_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/updt_et_profile_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/updt_et_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/tv_profile_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="@color/colorPrimary"
        android:layout_margin="10dp"
        android:textAlignment="textEnd"/>

    <Button
        android:id="@+id/updt_btn_profile_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_margin="10dp"
        android:minWidth="300dp"
        android:background="@color/colorAccent"
        android:layout_gravity="center" />


</LinearLayout>