<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/EtTitle_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:hint="Title" />

        <EditText
            android:id="@+id/EtODName_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/EtTitle_edit"
            android:hint="Owner/Driver Name" />

        <EditText
            android:id="@+id/EtContact_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/EtODName_edit"
            android:inputType="phone"
            android:hint="Contact" />

        <EditText
            android:id="@+id/EtPrice_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/EtContact_edit"
            android:inputType="number"
            android:hint="Price" />

        <Button
            android:id="@+id/btn_Save_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:minWidth="150dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/EtPrice_edit"
            android:layout_centerInParent="true"
            android:text="Save"/>

    </RelativeLayout>
</LinearLayout>